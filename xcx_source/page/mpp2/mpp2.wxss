.container {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  height:100%;
  position:relative;
  z-index:2;
}
.scroll_list{
	position:absolute;
	z-index:1;
	width:100%;
	top:62px;
	bottom:0;
	left:0;
	right:0;
}
.pctlist{
  width:96%;
  height: auto;
  margin:0 auto 0;
}
.pctinfo{
  width:44%;
  margin:20px 3%;
  float:left;
  display: flex;
  flex-direction: column;
  text-align:center;
  justify-content: space-between;
}

.pctinfo .imgsize{
	margin-bottom:20rpx;
}
.pctinfo .imgsize image{
	width:100%;
}
.pctinfo .pcttitle{
	font-family:微软雅黑;
	font-size:16px;
	color:#313131;
	line-height:150%;
	overflow:hidden;
	white-space:nowrap;
}
.pctinfo .stitle{
	font-family:微软雅黑;
	font-size:14px;
	color:#6a6a6a;
	line-height:150%;
	height:25px;
	overflow:hidden;
	white-space:nowrap;
}
.pctinfo .price{
	font-family:微软雅黑;
	font-size:16px;
	color:#313131;
	line-height:250%;
}


.pctinfo2{
  width:96%;
  margin:20px 3%;
  display: flex;
  flex-direction: row;
  text-align:center;
  justify-content: space-around;
}
.pctinfo2 .imgsize{
	width:45%;
}
.pctinfo2 .imgsize image{
	width:100%;
}
.pctinfo2 .rowlist{
	width:45%;
