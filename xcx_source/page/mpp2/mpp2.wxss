}
.pctinfo2 .pcttitle{
	font-family:微软雅黑;
	font-size:16px;
	color:#313131;
	line-height:150%;
	overflow:hidden;
	white-space:nowrap;
	text-align:left;
}
.pctinfo2 .stitle{
	font-family:微软雅黑;
	font-size:14px;
	color:#6a6a6a;
	line-height:150%;
	height:25px;
	overflow:hidden;
	white-space:nowrap;
	text-align:left;
}
.pctinfo2 .price{
	font-family:微软雅黑;
	font-size:16px;
	color:#313131;
	line-height:250%;
	text-align:left;
}



.addbutton{
  display: flex;
  flex-direction: row;
  width:100%;
  height:auto;
  justify-content: center;
}
.addbutton .button{
	width:120px;
	line-height:250%;
	font-family:微软雅黑;
	font-size:14px;
	background:#040a2c;
	color:#fff;
	text-align:center;
}
.addbutton .button2{
	width:120px;
	line-height:250%;
	font-family:微软雅黑;
	font-size:14px;
	background:#bfbfbf;
	color:#fff;
	text-align:center;
}
.addbutton icon{
	width:50px;
	align-items: center;
}
.addbutton icon image{
	width:65%;
}
.listset{
	display: flex;
    flex-direction: row;
	font-family:微软雅黑;
	font-size:14px;
	color:#313131;
	width:98%;
	height:60px;
	line-height:60px;
	padding:0 1%;
	border-top:1px solid #bfbfbf;
	border-bottom:1px solid #bfbfbf;
	position:fixed;
	top:0;
	z-index:2;
	background:#fff;
	justify-content: space-around;
}
.listset view{
	margin:0 2px;
}
.listset text{
	color:#bfbfbf;
	font-size:20px;
}
.listset icon{
	width:20px;
	height:20px;
	margin:10px 4px 0;
}
.listset icon image{
	width:100%;
}
.loadmore{
	width:100%;
	text-align:center;
	font-size:14px;
	line-height:300%;
	color:#999;
}



