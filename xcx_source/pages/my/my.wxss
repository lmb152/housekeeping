/**index.wxss**/
.all{
  position:absolute;
  width:100%;
  height:100%;
  background:url(http://dev.iprotime.com/public/dd/mybg.jpg) no-repeat;
  background-size:100% auto;
  background-color:#000;
}
.container {
  position:relative;
  width:100%;
  height:100%;
  display:block;
  top:0;
}
.userinfo {
  display: inline-block;
  flex-direction: column;
  align-items: center;
  position:absolute;
  opacity:0;
  top:32%;
  left:50%;
  margin-left:-32px;
  text-align:center;
}
.userinfo-avatar {
  width: 64px;
  height: 64px;
  border-radius: 50%;
}
.user-nick{
  display: flex;
  flex-direction: column;
  font-size:14px;
  color: #fff;
  margin:10px 0;
}

.info_list{
	width:100%;
	height:auto;
	display:inline-block;
	position:absolute;
	top:180px;
	opacity:0;
}
.weui_cell{
    position: relative;
    display: flex;
    padding: 15px;
    -webkit-box-align: center;
    -ms-flex-align: center;
    align-items: center;
    border-bottom: 1px solid #999;
}
.weui_cell_hd{
  display: inline-block;
  width: 20px;
  margin-right: 5px;
}
.weui_cell_hd image{
  width: 100%;
  height: 20px;
  vertical-align: -3px;
}
.weui_cell_bd{
  display: inline-block;
}
.weui_cell_bd_p{
  font-size: 14px;
  color: #fff;
}
.badge{
  position: absolute;
  top: 18px;
  right: 40px;
  width: 15px;
  height: 15px;
  line-height: 15px;
  background: #ff0000;
  color: #fff;
  border-radius: 50%;
  text-align: center;
  font-size: 8px;
}

.point{
	position:absolute;
	width:100%;
	height:auto;
	flex-direction: column;
    text-align: center;
	top:350px;
	color:#fff;
	font-size:14px;
	opacity:0;
}
.point .user-point{
	margin:20px 0;
}
.point #pointtext{
	font-size:30px;
	font-family:'Helvetica';
	color:yellow;
}

.start{
	position:fixed;
	bottom:0;
	border-radius: 0;
	width:100%;
	background:none;
	box-shadow:0 -10px 10px rgba(0, 204, 204, .2);
	text-align:center;
	padding:15px 0;
	font-size:14px;
	color:#fff;
	z-index:999;
	display:none;
}